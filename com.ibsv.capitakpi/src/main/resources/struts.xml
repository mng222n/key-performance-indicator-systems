<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
 	<constant name="struts.devMode" value="true" />
 	
	<package name="default" namespace="/" extends="hibernate-default">
		
		<action name="addEmployeeAction" 
			class="com.ibsv.capitakpi.employee.action.EmployeeAction" method="addEmployee" >
		    <result name="success">pages/employee.jsp</result>
		</action>
	
		<action name="listEmployeeAction" 
			class="com.ibsv.capitakpi.employee.action.EmployeeAction" method="listEmployee" >
		    <result name="success">pages/employee.jsp</result>
		</action>
		
	</package>
	
</struts>